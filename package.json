{
  "name": "mac-explorer",
  "version": "1.0.0",
  "description": "A Windows Explorer-like file manager for macOS built with Electron and React",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "build": "vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kidusshoa/mac-explorer.git"
  },
  "keywords": [
    "file-manager",
    "explorer",
    "electron",
    "react",
    "macos"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kidusshoa/mac-explorer/issues"
  },
  "homepage": "https://github.com/kidusshoa/mac-explorer#readme",
  "build": {
    "appId": "com.macexplorer.app",
    "productName": "Mac Explorer",
    "files": [
      "dist/**/*",
      "main.js",
      "src/main/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.12",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron-store": "^11.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
